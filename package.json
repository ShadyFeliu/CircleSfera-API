{
  "name": "circlesfera-api",
  "version": "1.0.0",
  "description": "Servidor de seÃ±alizaciÃ³n para CircleSfera",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "dev": "tsx server.ts",
    "postinstall": "npm run build && npm run create-log-dirs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:all": "npm run test && npm run test:integration",
    "test:ci": "npm run test:all -- --ci --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "create-log-dirs": "mkdir -p logs"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/coverage/**"
    ]
  },
  "dependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/express-rate-limit": "5.1.3",
    "@types/jsonwebtoken": "9.0.10",
    "bcryptjs": "3.0.2",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "7.5.1",
    "jsonwebtoken": "9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "typescript": "^5.8.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/socket.io": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mock-socket": "^9.3.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
