# Performance Alert Thresholds
ALERT_THRESHOLD_ERROR_RATE=0.1
ALERT_THRESHOLD_AVG_RESPONSE=1000
ALERT_THRESHOLD_P95_RESPONSE=3000
ALERT_THRESHOLD_WS_ERRORS=50
ALERT_THRESHOLD_WS_LATENCY=500

# Configuración del Servidor
PORT=3001
NODE_ENV=development

# Orígenes Permitidos (separados por comas)
ALLOWED_ORIGINS=http://localhost:3000,https://circlesfera.com

# Límites y Seguridad
MAX_CONNECTIONS_PER_IP=100
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# WebRTC (opcional)
TURN_URLS=turn:your-turn-server.com:3478
TURN_USERNAME=username
TURN_CREDENTIAL=password

# Logs
LOG_LEVEL=info

# Metrics and Monitoring
METRICS_API_KEY=your-api-key-here
