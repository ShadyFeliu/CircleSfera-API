{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "server.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "build", "src/**/__tests__/**/*", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
